<br><br>

<h2>Forgot your password?</h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <p class="centered">
    Enter the email associated with your account and click Reset Password. <br> We will send you an email with a link where you can reset your password and login.
  </p>

  <br><br>
  <hr>
  <br><br>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <br>

  <div class="actions">
    <%= f.submit "Reset Password", :class => "green button" %>
  </div>
<% end %>

<%= link_to "Back", new_member_session_path, :class => "grey button" %>
