<h1 class="title">Requests</h1>

<p id="notice"><%= notice %></p>

<div class="horiz-container">
  <%= link_to "Requests", requests_path, :class => "grey button small-margins" %>
  <%= link_to "Assignments", assignments_path, :class => "grey button small-margins" %>
</div>



<table>
  <thead>
    <tr>
      <th>Queue Position</th>
	  <th>Id</th>
      <th>Name</th>
      <th>Phone Number</th>
	  <th>Status</th>
      <th>Pick Up Location</th>
      <th>Drop Off Location</th>
      <th>Num of Passengers</th>
      <th>Additional Info</th>
      <th colspan="5"></th>
    </tr>
  </thead>

  <tbody>
    <% @requests.each do |request| %>
      <tr>
        <td><%= request.queue_pos %></td>
        <td><%= request.request_id %></td>
        <td><%= request.name %></td>
        <td><%= request.phone_number %></td>
        <td><%= request.request_status %></td>
        <td><%= request.pick_up_loc %></td>
        <td><%= request.drop_off_loc %></td>
        <td><%= request.num_passengers %></td>
        <td><%= request.additional_info %></td>
        <td><%= link_to 'Show', request %></td>
        <td><%= link_to 'Edit', edit_request_path(request) %></td>
		    <td><%= button_to 'Cancel', request_cancel_path(request), data: { confirm: 'Are you sure?' } %></td>
        <td><%= button_to 'Destroy', request, method: :delete, data: { turbo_confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
	
<br>

<%= link_to 'New Request', new_request_path, class: "green button small-margins" %>
