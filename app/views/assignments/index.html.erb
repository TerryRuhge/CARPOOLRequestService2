<h1 class="title">Assignments</h1>

<p id="notice"><%= notice %></p>

<div class="horiz-container">
  <%= link_to "Requests", requests_path, :class => "grey button small-margins" %>
  <%= link_to "Assignments", assignments_path, :class => "grey button small-margins" %>
</div>



<table>
  <thead>
    <tr>
      <th>Assignment Id</th>
      <th>Request Id</th>
      <th>Car Id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @assignments.each do |assignment| %>
      <tr>
        <td><%= assignment.assignment_id %></td>
        <td><%= assignment.request_id %></td>
        <td><%= assignment.car_id %></td>
        <td><%= link_to 'Show', assignment %></td>
        <td><%= link_to 'Edit Car', edit_assignment_path(assignment) %></td>
        <td><%= link_to 'Change Status', request_status_path(Request.find_by_request_id(assignment.request_id)) %></td>
        <td><%= button_to 'Dropped Off', assignment_dropped_off_path(assignment) %></td>
        <td><%= button_to 'Destroy', assignment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Assignment', new_assignment_path, class: "green button small-margins" %>
